<addons>
<addon id="plugin.video.bein" name="Bein Sports" version="0.0.1" provider-name="Zombi">
  <requires>
	<import addon="script.module.metahandler" version="1.0.2"/>
	<import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.common.plugin.cache" version="0.9.1"/>
	<import addon="script.module.parsedom" version="0.9.1"/>
	<import addon="plugin.video.youtube" version="2.9.2"/>
	<import addon="script.module.simplejson" version="2.0.10"/>
	<import addon="script.module.urlresolver" optional="true"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="fr">Bein Sports</summary>
    <description lang="fr">résumés et reportages sports</description>
    <summary lang="en">Bein Sports</summary>
    <description lang="en">Sports highlights and interviews </description>
    <platform>all</platform>
  </extension>
</addon>

